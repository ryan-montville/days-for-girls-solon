{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "webworker"],
    "isolatedModules": true
  },
  "include": ["./src/**/*.ts", "vite.config.ts"],
  "exclude": ["node_modules"]
}
